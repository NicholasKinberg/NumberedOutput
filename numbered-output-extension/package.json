{
  "name": "numbered-output-llm",
  "displayName": "Numbered Output LLM",
  "description": "VS Code extension for LLM with numbered output",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:numberedOutput.openChat"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "numberedOutput.openChat",
        "title": "Open AI Assistant Chat"
      },
      {
        "command": "numberedOutput.addFileContext",
        "title": "Add File Context to Chat"
      }
    ],
    "configuration": {
      "title": "Numbered Output LLM",
      "properties": {
        "numberedOutput.ollamaUrl": {
          "type": "string",
          "default": "http://localhost:11434",
          "description": "Ollama server URL"
        },
        "numberedOutput.modelName": {
          "type": "string",
          "default": "llama2",
          "description": "Ollama model name to use"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0"
  }
}
